@model IEnumerable<Desafio_MVC.Models.Funcionario>
@{
    Layout = "_LayoutAdmin";
}

<a asp-action="Cadastrar" asp-controller="Wa" class="btn btn-info">Cadastrar Novo Funcionário</a>


<hr>
    <h2>Lista de Funcionários em WA</h2>
    <hr>

    <script>   $(document).ready( function () {
    $('#Funcionario').DataTable();
} );</script>
    


<table id="Funcionario" class= "table table-striped table-bordered">
  <thead>
    <tr>
        <th>Cargo</th>
        <th>Inicio WA</th>
        <th>Nome</th>
        <th>Previsão término WA</th>
        <th>Tecnologia</th>
        <th>Unidade GFT</th>
        <th>Ações</th>
    </tr>
</thead>
<tbody>
    
     @foreach (var funcionario in Model)
{
    <tr>
        <td>@funcionario.Cargo</td> 
        <td>@funcionario.InicioWa</td>
        <td>@funcionario.Nome</td> 
        <td>@funcionario.TerminoWa</td> 
        <td>@funcionario.Tecnologia.NomeTec</td> 
        <td>@funcionario.Gft.Nome</td>        
        <td><a class="btn btn-primary" href="/wa/EditarFuncionario/@funcionario.Id">Editar</a> <a class="btn btn-danger"href="/Funcionario/Deletar/@funcionario.Id">Deletar</a></td>    
    
    </tr>
}
</tbody>
</table><br>

<a href="javascript:history.back();">Voltar</a>